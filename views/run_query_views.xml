<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="run_query_form_view" model="ir.ui.view">
            <field name="name">run.query.form</field>
            <field name="model">run.query</field>
            <field name="arch" type="xml">
                <form string="Run Query">
                    <sheet>
                        <button type="object" string="Execute"
                            name="action_execute_query"/>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Title" required="1"/>
                            </h1>
                        </div>
<!--                        <group>-->
<!--                            <group>-->
<!--                                <field name="create_date"/>-->
<!--                            </group>-->
<!--                            <group>-->
<!--                                <field name="example_field"/>-->
<!--                            </group>-->
<!--                        </group>-->
                    </sheet>
                </form>
            </field>
        </record>

        <record id="run_query_tree_view" model="ir.ui.view">
            <field name="name">run.query.tree</field>
            <field name="model">run.query</field>
            <field name="arch" type="xml">
                <tree string="Run Query">
                    <field name="name"/>
                </tree>
            </field>
        </record>


        <record id="run_query_act_window" model="ir.actions.act_window">
            <field name="name">Run Query</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">run.query</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new Run Query.
                </p>
            </field>
        </record>

        <menuitem name="Run Query" id="run_query_menu" action="run_query_act_window"/>

    </data>
</odoo>